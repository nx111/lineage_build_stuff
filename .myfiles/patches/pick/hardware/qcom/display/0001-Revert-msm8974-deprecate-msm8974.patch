+    hwc_rect_t displayFrame  = layer->displayFrame;
+    hwc_rect_t sourceCrop = integerizeSourceCrop(layer->sourceCropf);
+    trimLayer(ctx, dpy, layer->transform, sourceCrop, displayFrame);
