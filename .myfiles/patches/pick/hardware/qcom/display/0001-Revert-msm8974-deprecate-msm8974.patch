+void QService::securing(uint32_t startEnd) {
+    if(mClient.get()) {
+        mClient->notifyCallback(SECURING, startEnd);
+    }
+}
+
+void QService::unsecuring(uint32_t startEnd) {
+    if(mClient.get()) {
+        mClient->notifyCallback(UNSECURING, startEnd);
+    }
+}
