index b9b2f6d..44e4982 100644
--- a/sdk/src/java/lineageos/providers/LineageSettings.java
+++ b/sdk/src/java/lineageos/providers/LineageSettings.java
@@ -3087,6 +3087,16 @@ public final class LineageSettings {
