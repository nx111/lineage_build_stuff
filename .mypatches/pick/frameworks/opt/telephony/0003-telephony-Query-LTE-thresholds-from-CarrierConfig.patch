                         lteSignalStrength = 8;
                     } else if (lteRsrp >= sSignalCust[2][1]) { // Moderate
-                        lteRsrp = threshRsrp[2];
+                        lteRsrp = threshRsrp[1];
                         lteRssnr = 10;
                         lteSignalStrength = 5;
                     } else if (lteRsrp >= sSignalCust[2][0]) { // Poor
