                     } else if (lteRsrp >= sSignalCust[0][1]) { // Moderate
-                        lteRsrp = threshRsrp[2];
+                        lteRsrp = threshRsrp[1];
                         lteRssnr = 10;
                         lteSignalStrength = 5;
                     } else if (lteRsrp >= sSignalCust[0][0]) { // Poor
-                        lteRsrp = threshRsrp[1];
+                        lteRsrp = threshRsrp[0];
                         lteRssnr = -30;
                         lteSignalStrength = 0;
                     } else { // None or Unknown
-                        lteRsrp = threshRsrp[0];
+                        lteRsrp = -140;
